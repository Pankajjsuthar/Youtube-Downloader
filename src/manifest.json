{
    "name": "YouTube Downloader",
    "version": "1.0",
    "manifest_version": 2,
    "author": "Pankaj Suthar",
    "description": "Download from YouTube",
    "icons": {
        "16": "download.jpeg"
    },
    "permissions": [
        "downloads",
        "activeTab",
        "declarativeContent"
    ],
    "background": {
        "scripts": ["background.js"],
        "persistent": false
    },
    "browser_action": {
        "default_icon": {
            "16": "download.jpeg"
        },
        "default_popup": "popup.html",
        "default_title": "YouTube Downloader"
    }
}
